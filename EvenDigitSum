public class EvenDigitSum {
    // write your code here
   
public  static int getEvenDigitSum(int num){
    if(num<0){
        return -1;
        
    }
    int digit=0;
    int sum=0;
    while(num>0){
        digit=num%10;
        if(digit%2==0){
            sum=sum+digit;
            
        }
        num=num/10;
        
    }
        return sum;
}
}
